/* pages/submitCode/submitCode.wxss */

.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
}


.welcome{
  margin-top: 40px;
  text-align: center;
  font-size: 20px;
}

.username{
  font-size: 25px;
  margin-top: 20px;
  flex:block;
}

.message{
  margin-top: 41px;
  font-size: 10px;
  font-weight: bold;
}

.sanCodeBtn{
  width: 100%; 
  height: auto; 
  margin-top: 200px; 
  margin-bottom: 0px; 
  padding-bottom: 0px; 
}

.btn{
  width: 100px;
  height: 30px;
  border-radius: 20px;
  background-image: linear-gradient(135deg, #ABDCFF 0%, #0396FF 100%);
  box-shadow: 0 20px 30px -6px rgba(30, 161, 255, 0.5);
  outline: none;
  border: none;
  cursor: pointer;
  font-size: 15px;
  color: white;
  transition: all .5s ease-in-out;
}

.btn:hover{
  color: bisque;
  box-shadow: none;
}


.problem-none{
  display: none;
}

.problem-exist{
  color: red;
  font-size: 15px;
}